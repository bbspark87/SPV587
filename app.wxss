@import "style/layout.wxss";
@import "style/dimen.wxss";
@import "style/color.wxss";
@import "miniprogram_npm/@vant/weapp/common/index.wxss";

page {
    background: #f9f9f9;
    --TC_Theme: #6469DB;
    --TC_Blue: #424477;
    --dividerColor: #e5e5e5;

    --cell-text-color: #3e3e3e;
    --cell-font-size: 32rpx;
}

.half-divider {
    margin-left: 48rpx;
    margin-right: 48rpx;
    height: 1px;
    background: aqua;
    /*background: var(--dividerColor);*/
}

.full-divider {
    width: 100%;
    height: 1px;
    /*background: red;*/
    background: var(--dividerColor);
}

.locked {
    position: fixed;
}

.blank-view {
    width: 100%;
    height: 32rpx;
}

.blank-view-small {
    width: 100%;
    height: 16rpx;
}

.bottom-btn {
    display: flex;
    width: 100%;
    height: 96rpx;
    margin-bottom: 48rpx;
}

.txt-search-hint {
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.5);
}
