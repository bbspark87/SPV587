/**app.wxss**/
.container {
  height: 100%;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.base-menu {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  align-items: center;
  justify-content: center;
}

.blank-flex {
  display: flex;
  flex: 1;
}

.menu-text-title {
  padding-left: 30rpx;
  align-items: center;
  width: 120rpx;
  color: #535353;
  justify-content: center;
  font-size: 32rpx;
}

.menu-text {
  align-items: center;
  color: #3b3b3b;
  justify-content: center;
  font-size: 32rpx;
}

.devider-line {
  background: #f5f5f5;
  width: calc(100% - 0rpx);
  height: 1px;
}

.full-devider-line {
  background: #f5f5f5;
  width: 100%;
  height: 1px;
}


.icon-rignt {
  margin-right: 30rpx;
}