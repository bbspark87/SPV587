@import "style/layout.wxss";
@import "style/dimen.wxss";
@import "style/color.wxss";

page {
    background: #f9f9f9;
    --pageBround: #f9f9f9;
    --theColor: #6469DB;
    --textColor: #3e3e3e;
    --borderColor: #e5e5e5;
    --dividerColor: #f5f6f8;

    --cell-text-color: #3e3e3e;
    --cell-font-size: 32rpx;
}

.half-divider {
    margin-left: 32rpx;
    margin-right: 32rpx;
    height: 1px;
    background: var(--dividerColor);
}

.full-divider {
    width: 100%;
    height: 1px;
    /*background: red;*/
    background: var(--dividerColor);
}

.slide-bar {
    width: 100%;
    height: 48rpx;
    background: var(--pageBround);
}

.locked {
    position: fixed;
}

.blank-view {
    width: 100%;
    height: 32rpx;
}

.blank-view-small {
    width: 100%;
    height: 16rpx;
}

.container-background {
    width: 100%;
    height: 100%;
}

.txt-tag {
    border-radius: 4rpx;
    margin-right: 16rpx;
    border: solid 1rpx #e5e5e5;
}

.bottom-btn {
    display: flex;
    width: 100%;
    height: 96rpx;
    margin-bottom: 48rpx;
}
