@import "style/layout.wxss";
@import "style/dimen.wxss";
@import "style/color.wxss";

.container-radius {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    border-radius: 16rpx;
    border: solid 1px #c7d0ce;
    background: white;
    box-shadow: 1px 2rpx 5rpx #E5E5E5;
}

.menu-text-title {
    padding-left: 32rpx;
    align-items: center;
    width: 120rpx;
    color: #535353;
    justify-content: center;
    font-size: 32rpx;
}

.menu-text {
    align-items: center;
    color: #3b3b3b;
    justify-content: center;
    font-size: 32rpx;
}

.line-divider {
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #e5e5e5;
}

.full-divider {
    width: 100%;
    height: 1px;
    background: #e5e5e5;
}

.margin-divider {
    width: 100%;
    height: 1px;
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #e5e5e5;
}

.btn-main {
    width: calc(100% - 32rpx);
    height: 96rpx;
}

.btn-main-small {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.txt-btn {
    position: absolute;
}

.txt-big-title {
    font-size: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: normal;
    color: var(--textColor);
    flex: 1;
}

.img-margin-left {
    margin-left: 32rpx;
}

.img-margin-right {
    margin-left: 32rpx;
}

.txt-btn-main {
    color: white;
    margin-left: 16rpx;
    font-size: 32rpx;
}

page {
    background: #f7f7f7;
    --theColor: #6469DB;
    --textColor: #141414;
    --borderColor: #e5e5e5;
}