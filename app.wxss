@import "style/layout.wxss";
@import "style/dimen.wxss";
@import "style/color.wxss";

.half-divider {
    margin-left: 32rpx;
    margin-right: 32rpx;
    height: 1px;
    background: var(--dividerColor);
}

.full-divider {
    height: 1px;
    background: var(--dividerColor);
}

.blank-view {
    width: 100%;
    height: 32rpx;
}

.blank-view-small {
    width: 100%;
    height: 16rpx;
}

.margin-divider {
    width: 100%;
    height: 1px;
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #e5e5e5;
}

.btn-main {
    width: calc(100% - 32rpx);
    height: 96rpx;
}

.btn-main-small {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.txt-btn {
    position: absolute;
}

.txt-big-title {
    font-size: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: normal;
    color: var(--textColor);
    flex: 1;
}

.txt-btn-main {
    color: white;
    margin-left: 16rpx;
    font-size: 32rpx;
}

page {
    background: #f7f7f7;
    --theColor: #6469DB;
    --textColor: #141414;
    --borderColor: #e5e5e5;
    --dividerColor: #f5f6f8;
}