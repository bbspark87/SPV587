.container-base {
    width: 100%;
    display: flex;
    margin-top: 32rpx;
    flex-direction: column;
    background: white;
    justify-content: flex-start;

}

.input-area {
    width: calc(100% - 64rpx);
    margin: 32rpx;
    text-align: start;
    height: 180rpx;
}

.container-save {
    display: flex;
    width: 100%;
    height: 96rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 64rpx;
}

input-area::-webkit-input-placeholder {
    /* placeholder颜色  */
    color: #ffff00;
    /* placeholder字体大小  */
    font-size: 24rpx;
    /* placeholder位置  */
    text-align: left;
}

.container-pics {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    margin-top: 64rpx;
}

.img-upload-pic {
    width: 176rpx;
    margin-left: 32rpx;
    height: 176rpx;
}

.txt-tips {

    margin-left: 32rpx;
}