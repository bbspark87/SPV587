/* pages/collect/collect.wxss */
.containers {
   width: 100%;
   display: flex;
   flex-direction: column;
}

.list-item {
   height: 160rpx;
   display: flex;
   flex-direction: row;
   align-items: flex-end;
   justify-content: center;
   padding: 16rpx;
}

.img-shop {
   width: 200rpx;
   height: 160rpx;
   border-radius: 4rpx;
}

.container-shop-info {
   height: 100%;
   flex: 1;
   display: flex;
   flex-direction: column;
   align-items: flex-start;
   justify-content: center;
   margin-left: 32rpx;
}

.txt-shop-name {
   color: #4e4e4e;
   font-size: 36rpx;
   flex: 1;
}

.item-star {
   height: 100%;
   flex: 1;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: center;
}

.container-tags {
   display: flex;
   flex-direction: row;
}

.txt-tags {
   margin-right: 16rpx;
}

.txt-star {
   font-size: 24rpx;
   margin-left: 16rpx;
}