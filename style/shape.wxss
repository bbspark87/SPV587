/**宽度*/
.full-width {
    width: 100%;
}

.border-width {
    width: calc(100% - 96rpx);
}

.full-view {
    width: 100%;
    height: 100%;
    background: white;
}

/**边框*/
.card-stroke {
    border: 0.5px solid rgba(229, 229, 229, 1)
}

/**圆角*/
.card-radius {
    border-radius: 48rpx;
}

.card-radius-16 {
    border-radius: 32rpx;
}

.card-up-radius {
    border-radius: 32rpx 32rpx 0rpx 0rpx;
}

/**阴影*/
.normal-shadow {
    box-shadow: 0px 3px 4px 0px rgba(212, 212, 212, 0.5);
    background: white;
}

.card-shadow {
    box-shadow: 0px 3px 4px 0px rgba(212, 212, 212, 0.5);
    background: white;
}

.up-shadow {
    box-shadow: 0px 3px 4px 0px rgba(212, 212, 212, 0.5);
    background: white;
}

/**常用组合*/
.normal-card {
    width: calc(100% - 96rpx);
    border-radius: 16rpx;
    box-shadow: 0px 3px 4px 0px rgba(212, 212, 212, 0.5);
    background: white;
}

.normal-cell {
    width: 100%;
    box-shadow: 0px 3px 4px 0px rgba(212, 212, 212, 0.5);
    background: white;
}

.avatar-radius {
    border-radius: 500rpx;
}

.test-bg {
    background: deepskyblue;
}

.txt-bold {
    font-weight: 500;
}