/*横向布局*/
.row-left-top {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.row-center-top {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
}

.row-right-top {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-start;
}

.row-left-center {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.row-center {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.row-right-center {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.row-left-down {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-end;
}

.row-center-down {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
}

.row-right-down {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-end;
}

/*纵向布局*/
.column-left-top {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.column-center-top {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.column-right-top {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-end;
}

.column-left-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.column-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.column-right-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}

.column-left-down {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
}

.column-center-down {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.column-right-down {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
}

.fill-content {
    flex: 1;
}

/**底部固定*/
.lock-bottom {
    width: 100%;
    bottom: 0;
    position: fixed;
    margin-bottom: 96rpx;
}

.locked {
    position: fixed;
}

.navbar {
    width: 100%;
    overflow: hidden;
    background: white;
    display: flex;
    flex-direction: column;
    position: absolute;
    background: rgba(0, 0, 0, 0.0);
}

.topbar {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.tabbar {
    width: 100%;
    height: 170rpx;
}

.slidebar {
    width: 100%;
    height: 68rpx;
}
