/**底部按钮*/
.container-bottom {
    width: 100%;
    bottom: 0;
    position: fixed;
    margin-bottom: 48rpx;
    display: flex;
    flex-direction: column;
}

/**白色阴影方框*/
.container-rec {
    display: flex;
    flex-direction: column;
    width: 100%;
    background: white;
    box-shadow: 1px 2rpx 5rpx #E5E5E5;
}

/*左对齐，垂直排列*/
.container-left-vertical {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex: 1;
}

.container-center-horizon {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: white;
}

.container-center-vertical {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: white;
}

.container-cardview {
    display: flex;
    flex-direction: column;
    width: calc(100% - 64rpx);
    margin-left: 32rpx;
    background: white;
    border-radius: 16rpx;
    box-shadow: 1px 2rpx 5rpx #E5E5E5;
}