/* pages/posts/posts.wxss */

swiper {
    width: 100%;
    height: 460rpx;
}

swiper image {
    width: 100%;
    height: 460rpx;
}

.post-container {

    display: flex;
    flex-direction: column;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 10rpx;
}

.post-author-date {
    margin: 10rpx 0 10rpx 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-date {
    width: 360rpx;
    height: 60rpx;
    margin-left: 20rpx;
}

.post-title {
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    margin-top: 40rpx;
    color: #333;
}

.post-image {
    width: 100%;
    height: 340rpx;
}

.post-like {
    display: flex;
    flex-direction: columns;
    align-items: center;
    margin-left: 20rpx;
}

.post-like-image {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.post-like-font {
    font-size: 32rpx;
    color: black;
    display: inline-block;
    margin-bottom: 20rpx;
    margin-right: 40rpx;
}