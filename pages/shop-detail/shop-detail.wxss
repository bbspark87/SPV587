swiper {
    display: flex;
    width: 100%;
    height: 572rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.container-main {
    width: 100%;
    height: 572rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.container-card {
    width: 100%;
    height: 32rpx;
    background-color: #f7f7f7;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    margin-top: 540rpx;
    position: absolute;
    z-index: 100;
}

.container-navbar {
    display: flex;
    flex-direction: row;
    position: fixed;
    width: 100%;
}

.container-capsure {
    display: flex;
    flex-direction: row;
    width: 240rpx;
    margin-left: 20rpx;
    border-radius: 40rpx;
    background-color: white;
    border: solid 1px #c7d0ce;
    box-sizing: border-box;
    opacity: 0.6;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.text-city {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    font-weight: normal;
    color: var(--textColor);
    margin-right: 16rpx;
}

.card-avatar {
    width: calc(100% - 64rpx);
    height: 200rpx;
    background-color: white;
    border: solid 1rpx #dbdbdb;
    border-radius: 32rpx;
    display: flex;
    margin-bottom: 32rpx;
    flex-direction: row;
    align-items: center;
}

.card-menus {
    width: calc(100% - 64rpx);
    border: solid 1rpx #dbdbdb;
    border-radius: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
}

.img-avatar {
    margin: 32rpx;
}

.container-name {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    background: white;
}

.txt-title {
    margin: 32rpx;
}

.item-star {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-left: 32rpx;
    margin-top: 16rpx;
}

.container-infos {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 108rpx;
}

.txt-address {
    margin-left: 16rpx;
    flex: 1;
}

.container-info-menu {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80rpx;
}

.half-menu {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex: 1;
}

.txt-left-info {
    margin-left: 96rpx;
}

.txt-right-info {
    margin-left: 48rpx;
}

.item-tags {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    height: 96rpx;
    margin-bottom: 32rpx;
    margin-left: 96rpx;
}

.txt-tag {
    background: white;
    border-radius: 4rpx;
    border: solid 1rpx #e5e5e5;
    margin-left: 16rpx;
}
