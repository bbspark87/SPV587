.container-white {
    width: 100%;
    margin-top: 32rpx;
    background: white;
}

.item-star {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-left: 32rpx;
    margin-top: 16rpx;
}

.menu-shop {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 108rpx;
    background: white;
}

.txt-title {
    margin-left: 32rpx;
}

.img-margin {
    margin: 32rpx;
}

.container-shop {
    display: flex;
    width: 100%;
    height: 300rpx;
    flex-direction: column;
    align-items: center;
    margin-top: 32rpx;
    border-radius: 32rpx;
}

swiper {
    width: calc(100% - 64rpx);
    height: 300rpx;
    border-radius: 32rpx;
    overflow: hidden;
}

swiper-item {
    width: 100%;
    height: 100%;
    border-radius: 32rpx;
}

swiper image {
    width: 100%;
    height: 100%;
    border: solid 1px #c7d0ce;
}

.container-device {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 32rpx;
}

.txt-device {
    font-size: 100rpx;
    margin-right: 8rpx;
}

.container-need-know {
    margin: 16rpx 32rpx 32rpx 32rpx;
}

.container-join {
    display: flex;
    width: 100%;
    height: 96rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 64rpx;
}

.container-rescan {
    display: flex;
    width: 100%;
    height: 96rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 64rpx;
}