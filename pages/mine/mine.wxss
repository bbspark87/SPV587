page {
    background: white;
}

.container-user {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 32rpx;
}

.container-capsure {
    display: flex;
    flex-direction: row;
    margin-left: 20rpx;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.container-navbar {
    display: flex;
    flex-direction: row;
    position: fixed;
    width: 100%;
}

.menu-style {
    background: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
}

.top-menu {
    margin-bottom: 32rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.top-menu-block {
    flex: 1;
    background: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
}

.top-menu-image {
    width: 64rpx;
    height: 64rpx;
}

.container-menu {
    flex: 1;
    height: 96rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.img-tuiguang {
    width: calc(100% - 64rpx);
    height: 192rpx;
    border-radius: 32rpx;
}