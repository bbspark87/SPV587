.view-trans {
    width: 100%;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.view-banner {
    width: 100%;
    height: 294rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 16rpx;
    padding-bottom: 16rpx;
}

swiper {
    display: flex;
    width: 100%;
    height: 294rpx;
    border-radius: 16rpx;
}

swiper image {
    width: calc(100% - 96rpx);
    height: 100%;
    overflow: auto;
    margin-left: 48rpx;
    /*box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);*/
}

.img-client {
    width: 228rpx;
    height: 228rpx;
}

.txt-client {
    display: flex;
    margin-top: 41rpx;
    position: absolute;
    font-size: 82rpx;
    color: var(--TC_Theme);
    font-weight: 500;
    font-family: 'Bebas Neue';
}