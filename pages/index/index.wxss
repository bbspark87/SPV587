/* pages/posts/posts.wxss */

swiper {
    width: 100%;
    height: 256rpx;
    border-radius: 20rpx;
}

swiper image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.avatar-style {
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.banner-style {
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.container-menu {
    flex-wrap: wrap;
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
}

.button-menu {
    color: white;
    background-color: rgb(46, 155, 245);
    width: calc(calc(100% / 2) - 45rpx);
    height: 150rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.button-menu:nth-child(odd) {
    margin-left: 30rpx;
    margin-right: 15rpx;
    margin-bottom: 30rpx;
}

.button-menu:nth-child(even) {
    margin-right: 30rpx;
    margin-left: 15rpx;
    margin-bottom: 30rpx;
}