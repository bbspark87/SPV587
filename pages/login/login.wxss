.background-image {
    width: 100%;
    height: 100%;
}

.container-bottom {
    display: flex;
    flex-direction: column;
    width: calc(100% - 64rpx);
    justify-content: center;
    align-items: center;
    margin-bottom: 86rpx;
    border-radius: 32rpx;
    background-color: white;
    border: solid 1rpx #dbdbdb;
}

.container-agree {
    display: flex;
    flex-direction: row;
    width: calc(100% - 64rpx);
    height: 54rpx;
    align-items: center;
    margin-top: 40rpx;
}

.txt-agree {
    color: #a09f9e;
    font-size: 24rpx;
}

.btn-agree {
    color: #141414;
    font-size: 24rpx;
}

.container-login {
    display: flex;
    flex-direction: row;
    width: calc(100% - 64rpx);
    height: 96rpx;
    align-items: center;
    justify-content: center;
    border-radius: 16rpx;
    margin-top: 32rpx;
    margin-bottom: 40rpx;
    background: var(--theColor);
}

.btn-login {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.txt-login {
    color: white;
    margin-left: 16rpx;
    font-size: 32rpx;
}