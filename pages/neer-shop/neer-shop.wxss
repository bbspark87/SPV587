.img-shop-logo {
    width: 128rpx;
    height: 128rpx;
}

.container-shop-info {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
}

.item-tags {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.txt-tag {
    background: white;
    border-radius: 4rpx;
    border: solid 1rpx #e5e5e5;
    margin-right: 16rpx;
}
