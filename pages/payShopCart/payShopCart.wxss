.container-time {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 128rpx;
}

.txt-price {
  font-size: 64rpx;
  margin-left: 16rpx;
}

.container-price {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
  margin-top: 32rpx;
}

.container-shop {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
  margin-top: 64rpx;
}

.container-pay-type {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 64rpx;
  width: 100%;
}

.container-card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 64rpx;
  height: 96rpx;
  background: white;
  border-radius: 16rpx;
  border: solid 1px var(--borderColor);
  width: calc(100% - 64rpx);
}

.txt-pay-title {
  margin-left: 32rpx;
}

.checkbox {
  margin-right: 32rpx;
}

.container-bottom {
  display: flex;
  width: 100%;
  height: 96rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 64rpx;
  margin-bottom: 48rpx;
  position: fixed;
  bottom: 0;
}

.container-btn {
  display: flex;
  margin-left: 32rpx;
  margin-right: 32rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 96rpx;
  border-radius: 16rpx;
  background: var(--theColor);
}
