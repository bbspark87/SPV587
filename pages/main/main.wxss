/* pages/posts/posts.wxss */

swiper {
    display: flex;
    width: 100%;
    height: 572rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.container-main {
    width: 100%;
    height: 572rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.container-card {
    width: 100%;
    height: 32rpx;
    background-color: white;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    margin-top: 540rpx;
    position: absolute;
    z-index: 100;
}

.container-navbar {
    display: flex;
    flex-direction: row;
    position: absolute;
    width: 100%;
    background: rgba(256, 256, 0, 0.2);
}

.container-capsure {
    display: flex;
    flex-direction: row;
    width: 180rpx;
    margin-left: 24rpx;
    border-radius: 40rpx;
    border: solid 1px #dee7e7;
    background-color: #ffffff;
    opacity: 0.6;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.text-city {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    color: black;
    margin-right: 16rpx;
}

.avatar-style {
    margin-top: 32rpx;
    margin-left: 64rpx;
    margin-right: 32rpx;
}

.container-menu {
    flex-wrap: wrap;
    display: flex;
    flex-direction: row;
    margin-top: 32rpx;
}

.button-menu {
    color: white;
    background-color: var(--theColor);
    width: calc(calc(100% / 2) - 45rpx);
    height: 150rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.button-menu:nth-child(odd) {
    margin-left: 30rpx;
    margin-right: 15rpx;
    margin-bottom: 30rpx;
}

.button-menu:nth-child(even) {
    margin-right: 30rpx;
    margin-left: 15rpx;
    margin-bottom: 30rpx;
}