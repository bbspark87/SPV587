page {
    height: 100%;
}

.background-blue {
    width: 100%;
    height: 662rpx;
    position: absolute;
    z-index: -10;
}

.view-search {
    width: calc(100% - 96rpx);
    height: 80rpx;
    border-radius: 40rpx;
    background: rgba(255, 255, 255, 0.7);
    margin-top: 16rpx;
    margin-bottom: 16rpx;
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    box-shadow: 0px 3px 4px 0px rgba(129, 129, 129, 0.3);
}

.view-banner {
    width: 100%;
    height: 294rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 16rpx;
    padding-bottom: 16rpx;
}

swiper {
    display: flex;
    width: calc(100% - 96rpx);
    height: 294rpx;
    border-radius: 16rpx;
    overflow: hidden;
}

swiper image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    overflow: auto;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}

.card-notice {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: calc(100% - 96rpx);
    height: 64rpx;
    box-shadow: 0px 0px 16px 0px rgba(241, 244, 250, 1);
    margin-top: 48rpx;
    margin-bottom: 16rpx;
    border-radius: 48rpx;
}

.card-login {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: calc(100% - 96rpx);
    height: 144rpx;
    box-shadow: 0px 0px 16px 0px rgba(241, 244, 250, 1);
    background: #F3F4FF;
    margin-top: 32rpx;
    margin-bottom: 32rpx;
    border-radius: 72rpx;
}

.view-menus {
    width: calc(100% - 96rpx);
    margin-top: 16rpx;
    margin-bottom: 16rpx;
}

.btn-common {
    width: 100%;
    height: 144rpx;
    border-radius: 12rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 0px 16px 0px rgba(241, 244, 250, 1);
}

.btn-shop {
    background: #ECFBF8;
}

.btn-rank {
    background: #FDFAE7;
}

.btn-near {
    background: #EEF5FF;
}

.btn-gonglve {
    background: #EDFAF0;
}

.card-tuiguang {
    width: calc(100% - 96rpx);
    height: 216rpx;
    overflow: hidden;
    margin-top: 16rpx;
    margin-bottom: 16rpx;
    box-shadow: 0px 0px 16px 0px rgba(241, 244, 250, 1);
    border-radius: 24rpx;
}
