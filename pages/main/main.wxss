swiper {
    display: flex;
    width: 100%;
    height: 572rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.container-main {
    width: 100%;
    height: 372rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.container-card {
    width: 100%;
    height: 40rpx;
    background-color: #f7f7f7;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    margin-top: 540rpx;
    position: absolute;
    z-index: 100;
}

.container-navbar {
    display: flex;
    flex-direction: row;
    position: fixed;
    width: 100%;
}

.container-capsure {
    display: flex;
    flex-direction: row;
    width: 240rpx;
    margin-left: 20rpx;
    border-radius: 40rpx;
    background-color: white;
    border: solid 1px #c7d0ce;
    box-sizing: border-box;
    opacity: 0.6;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.text-city {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    font-weight: normal;
    color: var(--textColor);
    margin-right: 16rpx;
}

.container-user {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.card-avatar {
    width: calc(100% - 64rpx);
    height: 200rpx;
    background-color: white;
    border: solid 1rpx #dbdbdb;
    border-radius: 32rpx;
    display: flex;
    margin-bottom: 32rpx;
    flex-direction: row;
    align-items: center;
}

.card-menus {
    width: calc(100% - 64rpx);
    border: solid 1rpx #dbdbdb;
    border-radius: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
}

.img-avatar {
    margin: 32rpx;
}

.view-menus {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
    flex-wrap: wrap;
}

.menus {
    width: 374rpx;
    height: 192rpx;
}

.container-bottom {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 112rpx;
    background: #626262;
    justify-content: space-between;
    align-items: center;
}

.txt-login {
    color: white;
    font-size: 28rpx;
    margin-left: 32rpx;
    opacity: 0.8;
}

.btn-login {
    color: white;
    font-size: 28rpx;
    background: var(--theColor);
    border-radius: 6rpx;
    margin-right: 32rpx;
    padding: 14rpx 32rpx 14rpx 32rpx;
}

.container-tuiguang {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 112rpx;
    justify-content: flex-end;
    margin-bottom: 140rpx;
    margin-right: 32rpx;
    align-items: center;
}

.img-tuiguang {
    width: 128rpx;
    height: 128rpx;
}
