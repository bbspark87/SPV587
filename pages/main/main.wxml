<view class="container">
    <view class="container-main">
        <block>
            <swiper circular="true" autoplay="true" interval="3000">
                <swiper-item wx:for="{{3}}" wx:key="id">
                    <image mode="aspectFill" src="/images/avatar/banner1.png"></image>
                </swiper-item>
            </swiper>
        </block>
        <view data-page="/pages/cityList/cityList" bindtap="menuClick" class="container-navbar"
              style='height:{{navH}}px;'>
            <view class="container-capsure" style='height: {{capsHeight}}px;margin-top:{{navTop}}px;'>
                <text class="text-city">{{currentCity}}</text>
                <van-icon name="arrow-down" color="#555555"/>
            </view>
        </view>

        <view class="container-card"></view>
    </view>

    <view class="card-avatar">
        <l-avatar class="img-avatar" placement="right" size="128" open-data="{{['userAvatarUrl','userNickName']}}">
        </l-avatar>
    </view>

    <view class="view-menus">
        <image data-page="scanCode" bindtap="menuClick" class="menus" src="/images/icon/btn_scan.png"/>
        <image data-page="/pages/ranking/ranking" bindtap="menuClick" class="menus" src="/images/icon/btn_rank.png"/>
    </view>
    <view class="view-menus">
        <image data-page="/pages/shop/shop" bindtap="menuClick" class="menus" src="/images/icon/btn_neer.png"/>
        <image data-page="/pages/intro/intro" bindtap="menuClick" class="menus" src="/images/icon/btn_gonglve.png"/>
    </view>

    <view class="container-bottom" style="position:fixed;bottom:0;">
        <text class="txt-login">登录账号，更多好礼享不停</text>
        <view>
            <text bind:tap="goToLogin" class="btn-login">马上登录</text>
        </view>
    </view>

    <view class="container-tuiguang" style="position:fixed;bottom:0;">
        <image class="img-tuiguang" src="/images/icon/img_tuiguang.png"></image>
    </view>

</view>