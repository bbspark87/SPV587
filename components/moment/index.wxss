.view-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
}

.view-img-content {
    width: calc(100% - 64rpx);
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: start;
}

.view-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: start;
    padding-top: 32rpx;
    padding-bottom: 16rpx;
}

.img-avatar {
    width: 96rpx;
    height: 96rpx;
    margin-top: 32rpx;
    margin-left: 16rpx;
    margin-right: 24rpx;
}

.half-divider {
    width: 100%;
    height: 1px;
    background: #eeeeee;
}

.txt-title {
    font-size: 30rpx;
    color: #424477;
}

.txt-content {
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.5);
    margin-top: 8rpx;
}

.txt-time {
    font-size: 24rpx;
    color: rgba(0, 0, 0, 0.3);
    margin-top: 16rpx;
}

.img-one-pic {
    width: 336rpx;
    height: 414rpx;
    margin-top: 16rpx;
}

.view-nine-pic {
    width: 512rpx;
    margin-top: 16rpx;
}

.img-nine-pic {
    width: 160rpx;
    height: 160rpx;
}