.container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.container-card {
    width: 100%;
    height: 202rpx;
    border-radius: 16rpx;
}

.txt-name {
    color: #3e3e3e;
    font-size: 32rpx;
}

.txt-money {
    color: #6469DB;
    margin-right: 12rpx;
    font-size: 24rpx;
}

.txt-discount {
    color: #6469DB;
    font-size: 72rpx;
    font-weight: bold;
}

.txt-describe {
    color: #A09F9E;
    font-size: 16rpx;
    margin-left: 64rpx;
    margin-right: 64rpx;
}

.txt-date {
    color: #5C5C5C;
    font-size: 24rpx;
    margin-top: 16rpx;
}

.container-card-content {
    width: 100%;
    height: 202rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
}

.img-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}

.container-top {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.container-down {
    width: 100%;
    height: 51rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin-top: 1rpx;
}

.container-name-date {
    display: flex;
    flex-direction: column;
    align-items: start;
    margin-left: 64rpx;
    justify-content: center;
}

.container-price {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    margin-right: 64rpx;
}

.container-selected {
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    right: 32rpx;
    top: 0;
}