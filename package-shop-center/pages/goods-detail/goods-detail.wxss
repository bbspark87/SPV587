swiper {
    display: flex;
    width: 100%;
    height: 372rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

.container-main {
    width: 100%;
    height: 372rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.container-navbar {
    display: flex;
    flex-direction: row;
    position: fixed;
    width: 100%;
}

.container-capsure {
    display: flex;
    flex-direction: row;
    border-radius: 40rpx;
    background-color: white;
    border: solid 1px #c7d0ce;
    box-sizing: border-box;
    opacity: 0.6;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.container-name {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.container-half {
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    background: white;
}

.container-btn {
    width: 100%;
    height: 96rpx;
    border-radius: 16rpx;
}

.container-txt-icon {
    height: 96rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: fixed;
}

.container-white {
    width: 100%;
    height: 112rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: white;
}

.container-bottom-btn {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: calc(100% - 64rpx);
    height: 112rpx;
    align-items: center;
}